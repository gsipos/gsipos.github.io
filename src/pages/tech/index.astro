---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TechCard from "../../components/TechCard.astro";

const techCollection = await getCollection("tech");
---

<Layout>
  <section class="tech-section">
    <h1>Technologies</h1>
    <p>These are the technologies I work with and have experience in:</p>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 my-8">
  {
    techCollection.map((tech) => (
      <TechCard 
        name={tech.data.name} 
        description={tech.data.description}
        slug={tech.slug}
      />
    ))
  }
</div>
  </section>
</Layout>

<style>
  .tech-section {
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 2rem;
  }
</style>
