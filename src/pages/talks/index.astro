---
import Layout from '../../layouts/Layout.astro'
import { Mic, Calendar, Award, Video, FileText } from '@lucide/astro'
import { getCollection } from 'astro:content'

// Get all talks sorted by date in descending order (newest first)
const talks = await getCollection('talks')
const sortedTalks = [...talks].sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
---

<Layout title="Conference Talks & Presentations | Gergely Sipos">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="mb-12 max-w-3xl">
      <div
        class="inline-flex items-center gap-2 px-4 py-1.5 bg-primary/10 text-primary rounded-full text-sm font-medium mb-4"
      >
        <Mic size={16} />
        <span>Public Speaking</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-foreground">Conference Talks & Presentations</h1>
      <p class="text-lg text-muted-foreground">
        I enjoy sharing knowledge through talks and presentations at various events. Below you'll find my past speaking
        engagements, complete with slides and video recordings when available.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
      {
        sortedTalks.map((talk) => (
          <a href={`/talks/${talk.slug}`} class="block group">
            <div class="h-full rounded-lg border border-border bg-card text-card-foreground shadow-sm transition-all hover:shadow-md hover:-translate-y-1 flex flex-col overflow-hidden">
              <div class="p-4 md:p-6 flex-1 flex flex-col">
                <h3 class="text-xl font-semibold text-foreground mb-4 group-hover:text-primary transition-colors">
                  {talk.data.title}
                </h3>
                <div class="mt-auto space-y-3">
                  <div class="flex items-center gap-2">
                    <Award size={18} class="text-muted-foreground" />
                    <span class="font-medium text-foreground">{talk.data.event}</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Calendar size={18} class="text-muted-foreground" />
                    <span class="text-sm text-muted-foreground">
                      {new Date(talk.data.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </span>
                  </div>
                </div>
              </div>

              <div class="px-4 md:px-6 py-3 bg-muted/50 border-t border-border flex items-center justify-between">
                <div class="flex flex-wrap gap-3">
                  {talk.data.videoLink && (
                    <span class="inline-flex items-center text-xs px-3 py-1 rounded-full bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">
                      <Video size={14} class="mr-1" />
                      Video
                    </span>
                  )}
                  {talk.data.slides && (
                    <span class="inline-flex items-center text-xs px-3 py-1 rounded-full bg-green-50 text-green-700 dark:bg-green-900/30 dark:text-green-300">
                      <FileText size={14} class="mr-1" />
                      Slides
                    </span>
                  )}
                </div>
                <span class="text-xs text-muted-foreground/70 font-medium">View details â†’</span>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
