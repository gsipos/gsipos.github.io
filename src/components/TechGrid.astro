---
import { getCollection } from "astro:content";
import TechCard from "./TechCard.astro";

const techCollection = await getCollection("tech");
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 my-8">
  {
    techCollection.map((tech) => (
      <TechCard 
        name={tech.data.name} 
        description={tech.data.description}
        slug={tech.slug}
      />
    ))
  }
</div>
