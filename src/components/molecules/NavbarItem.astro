---
import { cn } from '@/lib/utils'

interface Props {
  href: string
  class?: string
}
const { href, class: className } = Astro.props
---

<li>
  <a
    href={href}
    class={cn("flex items-center gap-1.5 text-muted-foreground hover:text-foreground transition-colors font-medium", className)}
  >
    <slot name="icon" />
    <span><slot /></span>
  </a>
</li>
